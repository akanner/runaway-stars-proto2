{% extends 'base.html.twig' %}
{% block stylesheets  %}
<style>

	body {
	 padding-top: 70px;
	}

    .badge_img{
        height: 400px;
    }
</style>

{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
            <div class="col-md-12">
                <h2 class="text-center">&iexcl;Muchas Gracias por participar!</h2>
                <h3 class="text-center">Completaste el entrenamiento mejor que el {{percentile}} % de los participantes</h3>
            </div>
        </div>
        {% block result %}{% endblock %}
        <div class="row">
        	<div class="col-md-12">
	        	<p class="lead text-center">&iquest;Queres probar de nuevo?</p>
	        </div>
        </div>
        <div class="row">
        	<div class="col-md-offset-5 col-md-1">
        		<a class="btn btn-success btn-lg"  href="{{back_url}}" role="button">Si</a>
        	</div>
        	<div class="col-md-1">
        		<a class="btn btn-danger btn-lg" type="button" href="#" role="button">No</a>
        	</div>
        	<div class="col-md-5">
        	</div>
        </div>
	</div>
{% endblock %}
