<h3 class="text-center">Compar&aacute; tu resultado con el resto de los participantes</h3>
<table class="table table-condensed">
  <thead>
    <tr>
        <th>Posici&oacute;n</th>
        <th>Nombre</th>
        <th>Respuestas correctas</th>
        <th>Tiempo</th>
    </tr>
  </thead>
  <tbody>
  	{% for i in 0..1 %}
	    <tr>
            <td># {{leadersboard[i].pos}}</td>
            <td>{{leadersboard[i].username}}</td>
            <td>{{leadersboard[i].score}}%</td>
            <td>{{leadersboard[i].timeSpent}} segundos</td>
        </tr>
	{% endfor %}
	{% if leadersboard[2].pos > 3%}
		<tr>
			<td colspan="4" class="text-center three-dots">...</td>
		</tr>
	{% endif %}
 		<tr>
            <td><p class="text-primary"># {{leadersboard[2].pos}}</p></td>
            <td><p class="text-primary">{{leadersboard[2].username}}</p></td>
            <td><p class="text-primary">{{leadersboard[2].score}}%</p></td>
            <td><p class="text-primary">{{leadersboard[2].timeSpent}} segundos</p></td>
        </tr>
		<tr>
			<td colspan="4" class="text-center three-dots">...</td>
		</tr>
  </tbody>
</table>
{% block stylesheets %}
	<style type="text/css">
	.three-dots {

	    font: 20px Arial, sans-serif;
	}

	</style>

{% endblock %}
