{% extends 'task/index.html.twig' %}

{% block training_js %}
    <script type="text/javascript">
      $( ".answerBtn" ).on( "click", function( event ) {
          event.preventDefault();
          var btnValue = $(this).val();
            $.blockUI({ message: $('#throbber') });

               setTimeout( function () {
                  //adds the buttons value to the form
                  var input = $("<input>")
                   .attr("type", "hidden")
                   .attr("name", "answer").val(btnValue);
                  $( "#runaway-stars-form" ).append(input);
                  $( "#runaway-stars-form" ).submit();
               }, 1000);
      })
    </script>
{% endblock %}

{% block submit_buttons %}
  <div class="col-md-2 col-md-offset-5">
      <button type="submit" id="yesBtn" class="btn btn-success answerBtn" name="answer" value="1">Si</button>
      <button type="submit" id="noBtn" class="btn btn-danger answerBtn"  name="answer" value="0">No</button>
      <button type="submit" id="dontKnowBtn" class="btn btn-warning answerBtn" name="answer" value="2">No estoy seguro</button>
  </div>
{% endblock %}

