{% extends 'task/index.html.twig' %}

{% block training_js %}

  <script src="{{ asset('bundles/app/js/lib.js') }}"></script>
  <script src="{{ asset('bundles/app/js/crossfade.js') }}"></script>
  <script src="{{ asset('bundles/app/js/tasks.js') }}"></script>
  <script src="{{ asset('bundles/app/js/form_spinner.js') }}"></script>
  <script src="{{ asset('bundles/app/js/show-help.js') }}"></script>
{% endblock %}


{% block submit_buttons %}
	<div class="col-md-2 col-md-offset-5">
    <div class="text-center">
      <button type="button" id="yesBtn" class="btn btn-success concreteAnswer answerBtn" value="1">Si</button>
      <button type="button" id="noBtn" class="btn btn-danger concreteAnswer answerBtn" value="0">No</button>
      <button type="button" id="dontKnowBtn" class="btn btn-warning dontKnowBtn answerBtn" value="2">No estoy seguro</button>
    </div>
	   
      <input type="hidden" name="answer" />

      <button type="submit" id="submit-button" disabled="disabled" class="hidden btn btn-lg btn-success btn-block">Siguiente</button>
	</div>
{% endblock %}


{% block points_variables %}
    <!-- points -->
    <div class="hidden" id="div-points">
        <p id="correct-points">{{correct_points}}</p>
        <p id="incorrect-points">{{incorrect_points}}</p>
    </div>
    <p class="hidden" id="tmode">{{training_mode}}</p>
    {% if show_user_session %}
      <div class="row">
        <div class="col-md-3">
          <span>puntos: {{points}}</span>
        </div>
         <div class="col-md-3">
          <span>Pregunta {{current_step}}/{{max_step}}</span>
        </div>
        <div class="col-md-3">
          <span>Preguntas correctas: {{total_correct_responses}}/{{total_responses}} ({{correct_percentage}} %)</span>
        </div>
        <div class="col-md-3">
          <span>Tiempo total: {{total_time}} segundos</span>
        </div>
      {% endif %}


   
    </div>
{% endblock %}

{% block correct_image%}<img class="hidden marked-image" src="{{ image.markedBowshockImage }}"/>{% endblock %}

{% block training_response %}
    <div class="row">
      <div class="col-md-6 col-md-offset-3  answer">
          <div class="hidden alert alert-danger" role="alert"  id="answerTextWrong">
            <strong>Respuesta Incorrecta:</strong>{{images[0].text}}
          </div>
          <div class="hidden alert alert-success" role="alert"  id="answerTextRight">
            <strong>Respuesta Correcta:</strong>{{images[0].text}}
          </div>
           <div class="hidden alert alert-info" role="alert"  id="answerTextDontKnow">
            <strong>Respuesta:</strong>{{images[0].text}}
          </div>

           <p class="answerValue hidden">{{images[0].correct}}</p>
       </div>
    </div>
{% endblock %}

{% block help_text %}


<!-- Modal -->
<div class="modal fade" id="help_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Esto es un entrenamiento</h4>
      </div>
      <div class="modal-body">
        <p>Conocemos las respuestas y te vamos a decir si acertaste o no.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}