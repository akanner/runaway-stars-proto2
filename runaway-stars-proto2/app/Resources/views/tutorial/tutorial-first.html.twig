{% extends 'tutorial/tutorial-runaway.html.twig' %}

    {% block custom_step_js %}
    	<script type="text/javascript">
    	$("#question").attr("data-step","1");
    	$("#question").attr("data-intro","Observando la imagen en la pantalla vas a tener que indicarnos si ves una figura parecida a un arco de color alrededor de una estrella");
        $("#question").attr("data-tooltipClass","transparent-tooltip");

    	</script>

    {% endblock %}

    {% block custom_step_style %}
    <style type="text/css">
    .bowpoint {
        position:absolute;
        top:48%!important;
        left: 75%!important;
        opacity: 0.80!important;
        text-align: justify;
        text-justify: inter-word;
    }
    </style>

     {% endblock %}

{% block image%}
   <div class="row">
        <div class="col-md-4 col-md-offset-4 star-container" data-step="2" data-intro="Hola! soy una estrella! y alrededor mio tengo un arco de color, este arco puede ser una seÃ±al de que soy una runaway star" data-highlightClass="transparent-overlay" data-tooltipClass="starpoint transparent-tooltip" data-position="left">
            <div>
                <img class="img-responsive star-image" src="{{asset('bundles/app/images/tutorial/HIP88652-rgb.jpg') }}"  data-step="3" data-intro="Soy un arco!" data-position="right" data-highlightClass="transparent-overlay" data-tooltipClass="bowpoint"/>
            </div>
            <img class="hidden marked-image" src="{{ asset('bundles/app/images/tutorial/HIP88652-rgb_m.gif') }}"/>
        </div>
    </div>
{% endblock %}

{% block submit_buttons %}
  <div class="col-md-2 col-md-offset-5">
    <div class="text-center">
        <button type="button" id="yesBtn" class="btn btn-success rightAnswerBtn answerBtn" name="answer" data-position="top" value="1" data-intro="En este caso, ya te dijimos la respuesta, &iquest;Qu&eacute; facil no?" data-step="4" data-tooltipClass="transparent-tooltip">Si</button>
        <button type="button" id="noBtn" class="btn btn-danger wrongAnswerBtn answerBtn"  name="answer" value="0">No</button>
        <button type="button" id="dontKnowBtn" class="btn btn-warning dontKnowBtn answerBtn" name="answer" value="2">No estoy seguro</button>

    </div>
	
	<button type="submit" id="submit-button" disabled="disabled" class="hidden btn btn-lg btn-success btn-block">Siguiente</button>
  </div>
{% endblock %}