{% extends 'task/index.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/intro.js') }}"></script>
    {% block custom_step_js %}{% endblock %}
    <script type="text/javascript">

    function toggleResponse()
    {
      //shows the submit button
      $("#submit-button").removeClass('hidden');
      $("#submit-button").prop('disabled',false);
      //hides the other buttons
      $(".answerBtn").addClass('hidden');
      //shows the bowshock in the image
      var starImages = $(".star-container");
      $.each(starImages,function(i,obj){
        var newSrc = $(obj).find(".marked-image").prop("src");
        $(obj).find(".star-image").prop("src",newSrc);
      })
            
      introJs().exit();
     }


      introJs().setOptions({
          nextLabel: 'Siguiente',
          prevLabel: 'Atras',
          skipLabel: 'Cerrar',
          doneLabel: 'Cerrar'})
      .start();

		//wrongAnswerBtn click handler
		$(".wrongAnswerBtn").on("click",function(){
			$("#answerTextWrong").removeClass("hidden");
			introJs().exit();
		});
		//rightAnswerBtn click handler
		$(".rightAnswerBtn").on("click",function(){
			//hides the wrong answer text
			$("#answerTextWrong").addClass("hidden");
			//shows the right answer text
			$("#answerTextRight").removeClass("hidden");
			toggleResponse();
    })

    $(".dontKnowBtn").on("click",function(){
      //hides the wrong answer text
      $("#answerTextWrong").addClass("hidden");
      //shows the right answer text
      $("#answerTextDontKnow").removeClass("hidden");
      toggleResponse();
    });
	
    </script>
{% endblock %}


{% block custom_stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/app/css/introjs.css') }}">
{% endblock %}


{% block submit_buttons %}
  <div class="col-md-2 col-md-offset-5" data-intro="Respond&eacute; para continuar" data-step="3">
  	<div class="text-center">
		<button type="button" id="yesBtn" class="btn btn-success rightAnswerBtn answerBtn" name="answer" value="1">Si</button>
		<button type="button" id="noBtn" class="btn btn-danger wrongAnswerBtn answerBtn"  name="answer" value="0">No</button>
		<button type="button" id="dontKnowBtn" class="btn btn-warning dontKnowBtn answerBtn" name="answer" value="2">No estoy seguro</button>
  	</div>
	<button type="submit" id="submit-button" disabled="disabled" class="hidden btn btn-lg btn-success btn-block">Siguiente</button>
  </div>
{% endblock %}

{% block training_response %}
    <div class="row">
      <div class="col-md-6 col-md-offset-3  answer">
          <div class="hidden alert alert-danger" role="alert"  id="answerTextWrong">
            <strong>Respuesta Incorrecta:</strong> En la imagen hay una runaway star, hac&eacute; click en "Si"
          </div>
          <div class="hidden alert alert-success" role="alert"  id="answerTextRight">
            <strong>Respuesta Correcta:</strong> Buen trabajo!
          </div>
          <div class="hidden alert alert-info" role="alert"  id="answerTextDontKnow">
            <strong>Respuesta:</strong> En este caso, es una runaway star.
          </div>
       </div>
    </div>
{% endblock %}





