<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Participant" table="participant" repository-class="AppBundle\Repositories\ParticipantRepository">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false"/>
    <field name="age" type="integer" column="age" nullable="true"/>
    <field name="gender" type="string" column="gender" length="45" nullable="true"/>
    <field name="zooniverseUsername" type="string" column="zooniverse_username" length="100" nullable="true"/>
    <one-to-one field="session" target-entity="ParticipantSession" mapped-by="participant" />

  </entity>
</doctrine-mapping>
